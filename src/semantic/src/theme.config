/* LJD See https://jsramblings.com/2018/03/04/how-to-use-semantic-ui-with-a-custom-theme-in-your-CRA-app.html for a great tutorial */

/*******************************
        Theme Selection
*******************************/

/* To override a theme for an individual element
   specify theme name below
*/

/* Global */
@site        : 'disco-dark';
@reset       : 'default';

/* Elements */
@button      : 'disco-dark';
@container   : 'default';
@divider     : 'default';
@flag        : 'default';
@header      : 'disco-dark';
@icon        : 'disco-dark';
@image       : 'default';
@input       : 'disco-dark';
@label       : 'default';
@list        : 'default';
@loader      : 'default';
@placeholder : 'default';
@rail        : 'default';
@reveal      : 'default';
@segment     : 'disco-dark';
@step        : 'default';

/* Collections */
@breadcrumb  : 'default';
@form        : 'disco-dark';
@grid        : 'default';
@menu        : 'disco-dark';
@message     : 'default';
@table       : 'disco-dark';

/* Modules */
@accordion   : 'default';
@checkbox    : 'default';
@dimmer      : 'default';
@dropdown    : 'default';
@embed       : 'default';
@modal       : 'default';
@nag         : 'default';
@popup       : 'default';
@progress    : 'default';
@rating      : 'default';
@search      : 'default';
@shape       : 'default';
@sidebar     : 'disco-dark';
@sticky      : 'default';
@tab         : 'default';
@transition  : 'default';

/* Views */
@ad          : 'default';
@card        : 'default';
@comment     : 'default';
@feed        : 'default';
@item        : 'disco-dark';
@statistic   : 'default';

/*******************************
            Folders
*******************************/

/* Path to theme packages */
@themesFolder : 'themes';

/* Path to site override folder */
@siteFolder   : 'site/';


/*******************************
         Import Theme
*******************************/

@import (multiple) "theme.less";

/* End Config */
